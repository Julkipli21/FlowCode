<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">


        <Button
            android:id="@+id/trylButton"
            android:layout_width="330dp"
            android:layout_height="88dp"
            android:background="@drawable/button1"
            android:drawableStart="@drawable/custom_flowchart"
            android:drawableEnd="@drawable/custom_cpp"
            android:text="Flowchart to C++"
            android:textColor="@color/white"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.17" />

        <Button
            android:id="@+id/Code2Flowchart"
            android:layout_width="330dp"
            android:layout_height="91dp"
            android:background="@drawable/button1"
            android:text="C++ to Flowchart"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:drawableEnd="@drawable/custom_flowchart"
            android:drawableStart="@drawable/custom_cpp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/trylButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/trylButton"
            app:layout_constraintTop_toBottomOf="@+id/trylButton"
            app:layout_constraintVertical_bias="0.116" />


</androidx.constraintlayout.widget.ConstraintLayout>